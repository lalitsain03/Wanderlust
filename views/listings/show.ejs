<% layout("layouts/boilerplate") %>

    <style>
        .show-img {
            object-fit: cover;
            height: 400px;
            width: 100%;
        }

        .show-card {
            margin-bottom: 2rem;
        }

        .btns {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .btns .edit-btn,
        .btns .delete-btn {
            min-width: 100px;
        }

        #map {
            width: 100%;
            height: 400px;
            border-radius: 10px;
            margin-top: 1rem;
        }

        @media (max-width: 768px) {
            .show-img {
                height: 250px;
            }

            .btns {
                flex-direction: column;
                align-items: center;
            }

            .card.col-5 {
                width: 100% !important;
                margin-left: 0 !important;
            }
        }
    </style>

    <div class="container mt-4">
        <div class="row justify-content-center text-center mb-3">
            <div class="col-lg-8">
                <h3>
                    <%= listing.title %>
                </h3>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="card col-lg-6 col-md-8 col-sm-10 show-card listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                    <p class="card-text">Owned By <i>
                            <%= listing.owner.username %>
                        </i></p>
                    <p class="card-text">
                        <%= listing.description %>
                    </p>
                    <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %>
                    </p>
                    <p class="card-text">
                        <%= listing.location %>, <%= listing.country %>
                    </p>
                </div>
            </div>
        </div>

        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
            <div class="btns">
                <a href="/listing/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
                <form method="post" action="/listing/<%= listing._id %>?_method=DELETE">
                    <button class="btn btn-dark delete-btn">Delete</button>
                </form>
            </div>
            <% } %>

                <% if(currUser) { %>
                    <div class="row justify-content-center mb-4">
                        <div class="col-lg-8 col-md-10">
                            <hr>
                            <h4>Leave a Rating</h4>
                            <form action="/listing/<%= listing._id %>/reviews" method="post" novalidate
                                class="needs-validation">
                                <div class="mb-3 mt-3">
                                    <label for="rating" class="form-label">Rating</label>
                                    <fieldset class="starability-slot">
                                        <legend>Rate:</legend>
                                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                            value="1" checked />
                                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                        <label for="first-rate5" title="Amazing">5 stars</label>
                                    </fieldset>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label for="comment" class="form-label">Comment</label>
                                    <textarea name="review[comment]" cols="30" rows="5" id="comment"
                                        class="form-control" required></textarea>
                                    <div class="invalid-feedback">Please add some comment for review</div>
                                </div>
                                <button class="btn btn-outline-dark">Submit</button>
                            </form>
                        </div>
                    </div>
                    <% } %>

                        <% if(listing.reviews.length> 0) { %>
                            <div class="row justify-content-center">
                                <div class="col-lg-10">
                                    <p><b>All Reviews</b></p>
                                    <div class="row">
                                        <% for(let review of listing.reviews) { %>
                                            <div class="card col-lg-5 col-md-6 col-sm-12 mb-3 ms-3">
                                                <div class="card-body mb-3">
                                                    <h5 class="card-title">@<%= review.author.username %>
                                                    </h5>
                                                    <p class="starability-result card-text"
                                                        data-rating="<%= review.rating %>"></p>
                                                    <p class="card-text">
                                                        <%= review.comment %>
                                                    </p>
                                                </div>
                                                <form class="mb-3" method="post"
                                                    action="/listing/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                                    <button class="btn btn-sm btn-dark">Delete</button>
                                                </form>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <div class="row justify-content-center mb-5">
                                    <div class="col-lg-8 col-md-10">
                                        <h3>Where you'll be</h3>
                                        <div id="map"
                                            data-coordinates='<%= JSON.stringify(listing.geometry.coordinates) %>'
                                            data-title="<%= listing.title %>" data-location="<%= listing.location %>">
                                        </div>
                                    </div>
                                </div>
    </div>

    <script src="/js/map.js"></script>