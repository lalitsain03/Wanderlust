<% layout("layouts/boilerplate") %>

    <style>
        #filters {
            display: flex;
            flex-wrap: nowrap;
            align-items: center;
            overflow-x: auto;
            padding: 1rem 0;
            scroll-snap-type: x mandatory;
        }

        .filter {
            text-align: center;
            margin-right: 1.5rem;
            margin-top: 1rem;
            opacity: 0.7;
            scroll-snap-align: start;
            white-space: nowrap;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
            margin-top: 0.3rem;
        }

        .filter i {
            font-size: 1.5rem;
        }

        @media (max-width: 768px) {
            .filter i {
                font-size: 1.2rem;
            }

            .filter p {
                font-size: 0.7rem;
            }
        }

        .tax-info {
            display: none;
        }

        .tax-toggle {
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.2rem;
            padding: 1rem;
            margin-left: 1rem;
            display: flex;
            align-items: center;
            white-space: nowrap;
        }

        .listing-card img {
            object-fit: cover;
        }

        @media (max-width: 576px) {
            .tax-toggle {
                margin-left: 0.5rem;
                padding: 0.5rem;
                font-size: 0.8rem;
            }
        }

        /* Hide scrollbar for filters */
        #filters::-webkit-scrollbar {
            display: none;
        }

        #filters {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        .listing-link {
            text-decoration: none;
            color: inherit;
        }
    </style>

    <div id="filters">
        <!-- Filters -->
        <div class="filter" data-category="Trending">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter" data-category="Rooms">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter" data-category="Iconic Cities">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter" data-category="Mountains">
            <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter" data-category="Castles">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter" data-category="Amazing Pools">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter" data-category="Camping">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter" data-category="Farming">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farming</p>
        </div>
        <div class="filter" data-category="Arctic">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter" data-category="Domes">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        <div class="filter" data-category="Boats">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </div>

        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Show GST</label>
            </div>
        </div>
    </div>

    <!-- Listings -->
    <div class="container">
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4 mt-3">
            <% for(let listing of allListings) { %>
                <div class="col">
                    <a href="/listing/<%= listing._id %>" class="listing-link">
                        <div class="card listing-card" data-category="<%= listing.category %>">
                            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image"
                                style="height: 20rem;">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <p class="card-text">
                                    <b>
                                        <%= listing.title %>
                                    </b> <br>
                                    &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                                        <i class="tax-info"> +18% GST</i>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <% } %>
        </div>
    </div>

    <script>
        // Toggle tax info
        document.getElementById("switchCheckDefault").addEventListener("click", () => {
            document.querySelectorAll(".tax-info").forEach(info => {
                info.style.display = (info.style.display === "inline") ? "none" : "inline";
            });
        });

        // Filter listings
        document.querySelectorAll(".filter").forEach(filter => {
            filter.addEventListener("click", () => {
                const selected = filter.getAttribute("data-category");
                document.querySelectorAll(".listing-card").forEach(card => {
                    card.closest(".col").style.display = (card.getAttribute("data-category") === selected) ? "block" : "none";
                });
            });
        });
    </script>