<% layout("layouts/boilerplate") %>

    <br>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Your Listing </h2>
            <form method="post" action="/listing/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"
                enctype="multipart/form-data">

                <div class="md-3">
                    <label for="title" class="form-label">Title</label>
                    <textarea name="title" class="form-control" required><%= listing.title %></textarea>
                    <div class="valid-feedback">Title looks good</div>
                </div>
                <div class="md-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" class="form-control" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Description should be short</div>
                </div>
                <div class="mb-3">
                    <select class="form-select" name="category" aria-label="Default select example">
                        <option selected>Choose category of your location </option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing Pools">Amazing Pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farming">Farming</option>
                        <option value="Arctic">Arctic</option>
                        <option value="Domes">Domes</option>
                        <option value="Boats">Boats</option>
                    </select>
                    <div class="md-3">
                        Original Listing Image <br>
                        <img src="<%= originalImageUrl  %>" alt="image">
                    </div>
                    <div class="md-3">
                        <label for="image" class="form-label">Upload New Image</label>
                        <input name="image" class="form-control" type="file">
                    </div>
                    <div class="row">
                        <div class="md-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <textarea name="price" class="form-control" required><%= listing.price %></textarea>
                            <div class="invalid-feedback">Price should be valid</div>
                        </div>
                        <div class="md-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <textarea name="country" class="form-control" required><%= listing.country %></textarea>
                            <div class="invalid-feedback">Country should be valid</div>
                        </div>
                    </div>
                    <div class="md-3">
                        <label for="location" class="form-label">Location</label>
                        <textarea name="location" class="form-control" required><%= listing.location %></textarea>
                        <div class="invalid-feedback">Location should be valid</div>
                    </div>
                    <button class="btn btn-dark edit-btn mt-3">Update</button>

            </form>
            <br>
        </div>
    </div>
    <script src="/js/script.js"></script>